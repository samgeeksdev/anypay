{
    "name": "samgeeksdev/anypay",
    "type": "library",
    "description": "Laravel Anypay Gateway Integration Package",
    "homepage": "https://github.com/samgeeksdev/anypay",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Khanzadi",
            "email": "khanzadimahdi@gmail.com",
            "homepage": "https://github.com/samgeeksdev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/broadcasting": "^5.0|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/support": "^5.0|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "samgeeksdev/multipay": "^1.0"
    },
    "suggest": {
        "ext-soap": "Needed to support some drivers that required SOAP"
    },
    "require-dev": {
        "orchestra/testbench": "^3.0|^4.0|^5.0|^6.0|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "samgeeksdev\\Anypay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "samgeeksdev\\Anypay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "samgeeksdev\\Anypay\\Provider\\AnypayServiceProvider"
            ],
            "aliases": {
                "Anypay": "samgeeksdev\\Anypay\\Facade\\Anypay"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
